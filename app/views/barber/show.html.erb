
<div class="profile_headline container">
<br>
<h4> My Appointments</h4>
<p class="badge"> Barber Code <span><%=@barber.unique_code%></span><p>

</hr>
  <div class='row'>
    <div class='col-md-4'>
    <!-- <link_to 'Authorize Google Calendar', schedule_gcal_redirect_path ><br> -->
    <%=link_to 'Appointment Request', barber_path(current_user.id, appointment_type: 'request_all') %></br>
    <%=link_to 'Booked Appointments', barber_path(current_user.id, appointment_type: 'booked_appointments') %><br>
    <%=link_to 'Authorize Free Busy', '/auth/cronofy' %></br>
    </div>
    <div class='col-md-8'>
      <%if @clients == []%>
         <p>There are no appointments yet</p>
      <%else%>
      <% @clients.each do |appt|%>
        <div class="card">
        <p><%=appt.schedule_day.strftime('%m-%A-%Y')%> @ <%= appt.start_time.strftime("%I:%M %P")%></p> 
          <%= link_to 'Approve',  schedule_add_appointment_path(appt_id: appt.id) %> |
          <%= link_to 'Cancel',  schedule_cancel_appointment_path(appt_id: appt.id) %>
        </div>
        <%end%>
      <%end%>
 
    <div>
  </div>

</div>

