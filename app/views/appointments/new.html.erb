  </div>
  </center>

     
      <%= form_for @appointment, url: "/barber/#{@barber_id}/appointments" do |f| %>

        <div class='control-group'> 
          <%= f.text_field :name , placeholder: "First Name", class: 'appointment gsfi'%> 
        </div></br>
        <div class='control-group' >
          <%= f.select  :start_time, options_for_select(@free_times), {:include_blank => 'Available Times', class: 'gsfi'} %>
        </div></br>
        <div class='control-group' >
          <%= f.text_field :phone, placeholder: "212-123-1234", class: 'appointment gsfi'%>
        </div></br>
         <div class='control-group' >
          <%= f.text_field :email, placeholder: "client@greatcut.com", class: 'appointment gsfi'%>
        </div>   

          </br>
           <center>
            <%=f.submit 'Rerserve Appointment', class: 'btn btn-primary'%>
           </center>
      <%end%>





</div>
