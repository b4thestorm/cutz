<div class='show'>
    <%=link_to 'Monday', new_barber_appointment_path(barber_id: @barber_id, q: 'monday', style: params[:style]) , class: 'showbutton'%>
    <%=link_to 'Tuesday',new_barber_appointment_path(barber_id: @barber_id, q: 'tuesday', style: params[:style]), class: 'showbutton' %>
