  <%=link_to 'Sat',new_barber_appointment_path(barber_id: @barber_id, q: 'saturday', style: params[:style]), class: 'day'%>
  </div>
    </center>
    <center>
      <div class="panel-body">
    
      <%= form_for @appointment, url: "/barber/#{@barber_id}/appointments" do |f| %>

        <div class='control-group'> 
          <%= f.text_field :name , :size => '61', placeholder: "First Name", class:'appointment'%> 
        </div></br>
        <div class='control-group' >
          <%= f.select  :start_time, options_for_select(@free_times), {:include_blank => 'Available Times'} %>
        </div></br>
        <div class='control-group' >
          <%= f.text_area :summary, :size => '60', placeholder: "Notes"%>
        </div>
            <%=f.submit 'Rerserve Appointment', class: 'btn btn-primary'%>
      <%end%>

    </div>
    </center>


  </div>
